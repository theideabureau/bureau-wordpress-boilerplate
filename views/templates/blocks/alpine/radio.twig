<label class="checkbox">
    <input
        class="checkbox__input zvisually-hidden"
        type="checkbox"
        {# id="{{ block.value }}" #}
        {# name="{{ block.value }}" #}
        value="{{ block.value }}"

        {% if block.model is defined %}
            x-model="{{ block.model }}"
        {% endif %}

        {% if block.click is defined %}
            @click="{{ block.click }}"
        {% endif %}

        {% if block.checked is defined %}
            :checked="{{ block.checked }}"
        {% endif %}
    >
    <span
        class="checkbox__label"
        for="{{ block.value }}"
    >
        {{ block.label }}
    </span>
  </label>
