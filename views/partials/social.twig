<nav class="social">
    {% if social.facebook %}
        <a
            href="{{ social.facebook }}"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Facebook"
            class="social__link"
        >
            <svg class="social__icon"><use xlink:href="#icon-facebook" /></svg>
        </a>
    {% endif %}

    {% if social.instagram %}
        <a
            href="{{ social.instagram }}"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Instagram"
            class="social__link"
        >
            <svg class="social__icon"><use xlink:href="#icon-instagram" /></svg>
        </a>
    {% endif %}

    {% if social.twitter %}
        <a
            href="{{ social.twitter }}"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Twitter"
            class="social__link"
        >
            <svg class="social__icon"><use xlink:href="#icon-twitter" /></svg>
        </a>
    {% endif %}

    {% if social.linkedin %}
        <a
            href="{{ social.linkedin }}"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Linkedin"
            class="social__link"
        >
            <svg class="social__icon"><use xlink:href="#icon-linkedin" /></svg>
        </a>
    {% endif %}

    {% if social.youtube %}
        <a
            href="{{ social.youtube }}"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="YouTube"
            class="social__link"
        >
            <svg class="social__icon"><use xlink:href="#icon-youtube" /></svg>
        </a>
    {% endif %}
</nav>
